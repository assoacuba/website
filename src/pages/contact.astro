---
import SubPage from "../layouts/SubPage.astro";
---

<SubPage title="Contact">
    <section class="contact_section long_section">
        <div class="container">
            <div class="row">
                <div class="form_container">
                    <div class="heading_container">
                        <h2>Nous contacter</h2>
                        <h3>Tu souhaites...</h3>
                    </div>

                    <div class="contact">
                        <div class="col-lg-4">
                            <h3>Rejoindre l’équipe ? 👨🏽‍🤝‍👨🏼</h3>
                            <div class="button">
                                <a
                                    href="https://forms.office.com/e/Q9w4Zv73R1"
                                    target="_blank"
                                    >Je postule
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <h3>
                                Nous faire un don de matériel ? <br />📤
                            </h3>
                            <div class="button">
                                <a
                                    href="https://forms.office.com/e/vJwPdryv9L"
                                    target="_blank"
                                    >Je donne
                                </a>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <h3>
                                Echanger avec nous pour un partenariat ? <br
                                />👀
                            </h3>
                            <div class="button">
                                <a href="mailto:contact@acuba.fr"
                                    >J'envoie un mail
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</SubPage>
